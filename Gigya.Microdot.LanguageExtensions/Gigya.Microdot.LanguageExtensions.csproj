<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;net5.0</TargetFrameworks>
		<LangVersion>8</LangVersion>
		<CodeAnalysisRuleSet>$(SolutionDir)main.ruleset</CodeAnalysisRuleSet>
		<AssemblyTitle>Gigya.Microdot.LanguageExtensions</AssemblyTitle>
		<Description>
			Language and system library extensions for Microdot
		</Description>
		<Authors>Gigya Inc.</Authors>
